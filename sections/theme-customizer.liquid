<section class="container py-3 theme-section shadow-sm bg-light rounded mb-3">
  <form id="theme-customizer-form" class="row g-2 align-items-center">
    <div class="col-auto">
      <label for="colorScheme" class="form-label mb-0 fw-semibold">Color Scheme:</label>
      <select id="colorScheme" class="form-select form-select-sm">
        <option value="default">Default</option>
        <option value="blue">Blue</option>
        <option value="green">Green</option>
        <option value="yellow">Yellow</option>
        <option value="pink">Pink</option>
        <option value="dark">Dark</option>
      </select>
    </div>
    <div class="col-auto">
      <label for="textAlign" class="form-label mb-0 fw-semibold">Text Align:</label>
      <select id="textAlign" class="form-select form-select-sm">
        <option value="left">Left</option>
        <option value="center">Center</option>
        <option value="right">Right</option>
      </select>
    </div>
    <div class="col-auto">
      <label for="fontSize" class="form-label mb-0 fw-semibold">Font Size:</label>
      <select id="fontSize" class="form-select form-select-sm">
        <option value="1em">Normal</option>
        <option value="1.2em">Large</option>
        <option value="1.4em">Extra Large</option>
      </select>
    </div>
  </form>
</section>
