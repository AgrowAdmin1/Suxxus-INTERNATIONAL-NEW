    <link rel="stylesheet" href="{{ 'tailwind.css' | asset_url }}">
    <script src="{{ 'swiper-bundle.min.js' | asset_url }}"></script>
    <script src="{{ 'swiper-init.js' | asset_url }}"></script>
    {{ content_for_header }}
    {% render 'ajax-cart' %}
    {% render 'account-dashboard' %}
