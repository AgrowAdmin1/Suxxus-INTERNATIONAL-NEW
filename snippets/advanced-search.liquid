<div class="search-bar flex items-center gap-2 mb-6">
  <input type="text" id="search-input" class="border rounded-lg px-4 py-2 w-full" placeholder="Search products..." oninput="filterProducts()">
  <button class="button" onclick="filterProducts()">Search</button>
</div>
<script>
function filterProducts() {
  var input = document.getElementById('search-input').value.toLowerCase();
  var products = document.querySelectorAll('.product-card');
  products.forEach(function(card) {
    var title = card.querySelector('h3').textContent.toLowerCase();
    card.style.display = title.includes(input) ? '' : 'none';
  });
}
</script>
